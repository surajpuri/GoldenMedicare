<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">


    <android.widget.EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_report_include_title"
        android:inputType="text"
        android:hint="Report Title"
        android:drawablePadding="10dp"
        android:maxLines="1"
        android:layout_marginBottom="5sp" />

    <android.widget.EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_report_include_summary"
        android:layout_below="@id/activity_report_include_title"
        android:inputType="text|textMultiLine"
        android:hint="Report Summary"
        android:gravity="top"
        android:drawablePadding="10dp" />

    <android.widget.EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_report_include_remarks"
        android:layout_below="@id/activity_report_include_summary"
        android:inputType="text|textMultiLine"
        android:gravity="top"
        android:hint="Report Remarks"
        android:drawablePadding="10dp" />

    <android.widget.EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_report_include_date"
        android:layout_below="@id/activity_report_include_remarks"
        android:inputType="date"
        android:gravity="top"
        android:hint="Report Date"
        android:drawablePadding="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reportButton"
        android:id="@+id/activity_report_include_createButton"
        android:layout_below="@id/activity_report_include_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="85dp"
        android:paddingEnd="85dp"
        android:textSize="15sp"/>

</RelativeLayout>