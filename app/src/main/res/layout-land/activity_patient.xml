<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:src="@drawable/clinic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:id="@+id/activity_login_logo"/>

    <Button
        android:id="@+id/activity_patient_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_login_logo"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="PROFILE"
        android:textColor="@android:color/holo_blue_dark" />

    <Button
        android:id="@+id/activity_patient_appointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_patient_profile"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="MY APPOINTMENTS"
        android:textColor="@android:color/holo_blue_dark" />

    <Button
        android:id="@+id/activity_patient_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_patient_appointments"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="MY REPORTS"
        android:textColor="@android:color/holo_blue_dark" />

</RelativeLayout>
